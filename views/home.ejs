<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>

    <div class="container w:100vw mt-4">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <a href="/blog/<%= blog._id %>" class="text-decoration-none col">
          <div class="card mb-4" style="width: 300px">
            <img src="<%= blog.coverImage %>" class="" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">by : <%= blog.createdBy.fullName %></li>
            </ul>
          </div>
        </a>
        <% }) %>
      </div>
    </div>
  </body>
  <%- include('partials/script.ejs') %>
</html>
